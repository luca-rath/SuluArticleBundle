includes:
    - vendor/jangregor/phpstan-prophecy/src/extension.neon
    - vendor/phpstan/phpstan-doctrine/extension.neon
    - vendor/phpstan/phpstan-doctrine/rules.neon
    - vendor/phpstan/phpstan-symfony/extension.neon
    - vendor/phpstan/phpstan-phpunit/extension.neon
    - vendor/phpstan/phpstan-phpunit/rules.neon
    - vendor/thecodingmachine/phpstan-strict-rules/phpstan-strict-rules.neon

parameters:
    paths:
        - .
    level: 1
    excludes_analyse:
        - %currentWorkingDirectory%/vendor/*
        - %currentWorkingDirectory%/Tests/*
        - %currentWorkingDirectory%/Resources/phpcr-migrations/*
        # TODO enable when automation bundle is ready again
        - %currentWorkingDirectory%/PageTree/AutomationPageTreeUpdater.php
        - %currentWorkingDirectory%/PageTree/PageTreeRouteUpdateHandler.php

    ignoreErrors:
        - '#Thrown exceptions in a catch block must bundle the previous exception#'
